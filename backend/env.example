# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Model Configuration
# Доступные модели: gpt-3.5-turbo, gpt-4-turbo-preview, gpt-4o, gpt-4o-mini
OPENAI_MODEL=gpt-3.5-turbo
TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fillai_db
# Для продакшена используйте полный URL:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (опционально, для верификации email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@fillai.com

